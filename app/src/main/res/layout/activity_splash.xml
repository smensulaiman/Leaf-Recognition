<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SplashActivity">
    <LinearLayout
        android:id="@+id/top_lay"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="335dp"
            android:orientation="vertical"
            android:background="@drawable/font">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="357dp"
                android:background="@drawable/back"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="72sp"
            android:fontFamily="@font/tangerine_bold"
            android:layout_gravity="center"
            android:textColor="#004B00"
            android:textStyle="bold"
            android:layout_marginTop="80dp"/>
    </LinearLayout>
<LinearLayout
    android:id="@+id/bottom_lay"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The easiest way for leaf recognition"
        android:textSize="36sp"
        android:textAlignment="center"
        android:fontFamily="@font/sacramento_regular"
        android:layout_gravity="center"
        android:textColor="#0A6C0A"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:rotation="180"
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:orientation="vertical"
        android:background="@drawable/font">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="357dp"
            android:background="@drawable/back"/>

    </LinearLayout>
</LinearLayout>

</LinearLayout>