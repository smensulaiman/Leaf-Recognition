<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="335dp"
        android:background="@drawable/font"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="357dp"
            android:background="@drawable/back" />

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:background="@drawable/shipe_circle_white_all"
        android:padding="4dp"
        android:src="@drawable/pata2" />
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="72sp"
        android:layout_marginBottom="40dp"
        android:fontFamily="@font/tangerine_bold"
        android:layout_gravity="center"
        android:textColor="#004B00"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marjia Uddin Hima"
        android:textSize="32sp"
        android:textColor="#004B00"/>
    <TextView
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="himacse@gmail.com"
        android:textSize="18sp"
        android:textColor="#004B00"/>
</LinearLayout>

</RelativeLayout>