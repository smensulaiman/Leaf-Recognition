<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".SettingsActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="335dp"
    android:background="@drawable/font"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="357dp"
        android:background="@drawable/back" />

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:background="@drawable/shipe_circle_white_all"
        android:padding="4dp"
        android:src="@drawable/pata3" />
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="72sp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/tangerine_bold"
        android:layout_gravity="center"
        android:textColor="#004B00"
        android:textStyle="bold"/>
    <TextView
        android:background="@drawable/forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theme : Green"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:textSize="24dp"
        android:textColor="#004B00"/>
    <TextView
        android:background="@drawable/forget"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:text="Language : English"
        android:textSize="24dp"
        android:textColor="#004B00"/>

</LinearLayout>

</RelativeLayout>