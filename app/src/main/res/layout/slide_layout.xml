<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        android:translationZ="2dp"
        android:elevation="2dp"
        android:id="@+id/slide_img"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shipe_circle_white_all"
        app:civ_border_width="0dp"
        android:src="@drawable/pata1"
        app:civ_border_color="#00000000"/>

    <TextView
        android:id="@+id/slide_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        tools:text="Heading"
        android:textColor="@color/colorWhite"
        android:textAllCaps="true"
        android:fontFamily="@font/tangerine_regular"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/slide_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/slide_heading"
        android:padding="30dp"
        android:textColor="@color/colorTransparentWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        android:lineSpacingExtra="10dp"
        android:shadowRadius="2"
        android:shadowDy="1"
        android:shadowColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/tangerine_regular"
